default_platform(:ios)

  desc "build app and upload to testflight"
  lane :beta do
    match(type: "appstore")
    clear_derived_data
    increment_build_number(
        build_number: latest_testflight_build_number + 1
    )
    gym(
     clean: true,
     export_method: "app-store"
    )
    upload_to_testflight(
      api_key_path: "fastlane/key.json"
     )
    slack(
      message: "ğŸŒ Testflight ë°°í¬ ì„±ê³µ",
      slack_url: "https://hooks.slack.com/services/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"
    )
end

platform :ios do

  error do |lane, exception, options|
    slack(
      message: "âŒ ì—ëŸ¬ ë°œìƒ : #{exception}",
      success: false,
      slack_url: "https://hooks.slack.com/services/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"
)
  end
end

